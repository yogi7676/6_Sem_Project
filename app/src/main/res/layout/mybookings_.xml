<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/mybookingfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backcolor"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/thviewgalleryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Gallery Name:" />

            <TextView
                android:id="@+id/thgalleryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/thviewgalleryname"
                android:text="Gallery Name Here"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thevent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thgalleryname"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Event Name :" />

            <TextView
                android:id="@+id/theventname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thgalleryname"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/thevent"
                android:text="event name here"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thevent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Block :" />

            <TextView
                android:id="@+id/thblockname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/theventname"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/thblock"
                android:text="block name here"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thfloor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thevent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/thfloorno"
                android:text="Floor :" />

            <TextView
                android:id="@+id/thfloorno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thevent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="here"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thblock"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="Date :" />

            <TextView
                android:id="@+id/thdateview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thblock"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/thdate"
                android:text="date here"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thperiod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thblockname"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="end time"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thblockname"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/thperiod"
                android:text="Time :" />

            <TextView
                android:id="@+id/thuserid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/thgalleryid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>