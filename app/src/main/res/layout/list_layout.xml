<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="25dp"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/listdetails"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backcolor">

            <ImageView
                android:id="@+id/galleryviewimage"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_below="@id/galleryviewTitle"
                android:layout_height="200dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/galleryviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GalleryName"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/galleryviewimage"
                android:layout_toLeftOf="@id/galleryviewnumberseats"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="No.of.Seats :"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/galleryviewnumberseats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/galleryviewimage"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="Gallery Seats"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/gallerylocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/galleryviewimage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Location :"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/galleryviewblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/galleryviewimage"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/gallerylocation"
                android:layout_toEndOf="@id/gallerylocation"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Block"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gallerylocation"
                android:layout_marginLeft="5dp"
                android:text="Gallery Floor"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:id="@+id/galleryviewfloor"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

